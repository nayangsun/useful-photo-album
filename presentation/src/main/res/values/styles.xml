        <item name="fontFamily">@font/rubik_regular</item>
    </style>
    <style name="TextAppearance.Upa.Body2" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">@dimen/font_extra_medium</item>
        <item name="fontFamily">@font/rubik_regular</item>
    </style>
    <style name="TextAppearance.Upa.Caption" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="fontFamily">@font/rubik_regular</item>
    </style>
    <style name="TextAppearance.Upa.Caption.Medium" parent="@style/TextAppearance.Upa.Caption">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="fontFamily">@font/rubik_medium</item>
    </style>
    <style name="TextAppearance.Upa.Overline" parent="@style/TextAppearance.MaterialComponents.Overline">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">@dimen/font_extra_medium</item>
        <item name="fontFamily">@font/rubik_regular</item>
    </style>

    <!-- List item primary text, e.g. event titles .. -->
    <style name="TextAppearance.Upa.ListPrimary" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/rubik_medium</item>
    </style>

    <style name="TextAppearance.Upa.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
    </style>

    <style name="TextAppearance.Upa.Tab" parent="@style/TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Widget styles -->
    <style name="Widget.Upa" parent="@android:style/Widget.Material" />

    <style name="Widget.Upa.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="Widget.Upa.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:paddingEnd">8dp</item>
        <item name="contentInsetStartWithNavigation">?sessionListKeyline</item>
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
        <item name="titleTextAppearance">@style/TextAppearance.Upa.ToolbarTitle</item>
    </style>

    <style name="Widget.Upa.Tabs" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.Upa.Tab</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
    </style>

    <style name="Widget.Upa.NavigationView" parent="@style/Widget.MaterialComponents.NavigationView">
        <item name="itemBackground">@drawable/navigation_item_background</item>
        <item name="itemHorizontalPadding">@dimen/nav_item_horizontal_padding</item>
    </style>

    <!-- Navigation -->
    <style name="Widget.Upa.NavigationBarContentFrameLayout" parent="android:Widget.Material">
        <item name="navigationBarBorderColor">?attr/upaNavigationBarDividerColor</item>
        <item name="navigationBarBorderSize">1dp</item>
    </style>

    <style name="Widget.Upa.HashtagIoDecoration">
        <item name="android:drawable">@drawable/hashtag_io19</item>
        <item name="margin">@dimen/nav_item_horizontal_padding</item>
    </style>

    <!-- textAppearance alone doesn't support line spacing attrs. Multiline body text will use
      style="Widget.IOSched.MultilineBody" instead of the equivalent textAppearance.
 -->
    <style name="Widget.Upa.MultilineBody">
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <!-- Info -->
    <style name="Widget.Upa.EventCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">?colorControlLight</item>
        <item name="strokeWidth">1dp</item>
        <item name="eventTypeLogoBackground">?eventCardHeaderBackground</item>
    </style>

    <!-- Info -->
    <style name="TextAppearance.Upa.CollapsibleCard" parent="@style/TextAppearance.Upa.ListPrimary">
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <!-- Home -->
    <style name="TextAppearance.Upa.CountdownLabel" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.Upa.DayIndicatorDecoration">
        <item name="android:color">?colorPrimary</item>
        <item name="insetVertical">8dp</item>
    </style>

    <!-- Schedule -->
    <style name="Widget.Upa.Tag">
        <item name="android:gravity">center_vertical</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Widget.Upa.Tag.Inline">
        <item name="android:drawablePadding">@dimen/spacing_micro</item>
        <item name="android:drawableStart">@drawable/tag_dot</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>
    <!-- Settings -->
    <style name="Widget.Upa.Settings" />

    <style name="Widget.Upa.Settings.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:background">@null</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:paddingBottom">@dimen/spacing_tiny</item>
        <item name="android:paddingEnd">?listPreferredItemPaddingEnd</item>
        <item name="android:paddingStart">?listPreferredItemPaddingStart</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="switchPadding">@dimen/spacing_tiny</item>
        <item name="switchTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="Widget.Upa.Settings.Button">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:minHeight">?listPreferredItemHeightSmall</item>
        <item name="android:paddingBottom">@dimen/spacing_tiny</item>
        <item name="android:paddingEnd">?listPreferredItemPaddingEnd</item>
        <item name="android:paddingStart">?listPreferredItemPaddingStart</item>
        <item name="android:paddingTop">@dimen/spacing_tiny</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">?textAppearanceBody2</item>
    </style>


    <!-- Settings -->
    <style name="TextAppearance.Upa.AboutButtons" parent="@style/TextAppearance.Upa.ListPrimary">
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="Widget.Upa.Settings.Button.About">
        <item name="android:textAppearance">@style/TextAppearance.Upa.AboutButtons</item>
    </style>

    <!-- Misc -->
    <style name="Widget.Upa.EmptyResults">
        <item name="android:drawablePadding">@dimen/spacing_small</item>
        <item name="android:drawableTop">@drawable/no_items_found_204</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Schedule -->
    <style name="TextAppearance.Upa.ReservationStatus" parent="@style/TextAppearance.Upa.Body2">
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Agenda -->
    <style name="Widget.Upa.DateHeaders">
        <item name="android:width">@dimen/day_header_decor_width</item>
        <item name="android:height">@dimen/day_header_decor_height</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/day_header_text_size</item>
        <item name="verticalBias">0.67</item>
    </style>

    <!-- Codelabs -->
    <style name="Widget.Upa.Codelabs.InfoCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginBottom">@dimen/spacing_tiny</item>
        <item name="android:layout_marginEnd">?listPreferredItemPaddingEnd</item>
        <item name="android:layout_marginStart">?listPreferredItemPaddingStart</item>
        <item name="android:layout_marginTop">@dimen/spacing_tiny</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/highlighted_card_background</item>
    </style>

    <!-- temp -->


    <style name="TextAppearance.Upa.NoticeBody" parent="@style/Widget.Upa.MultilineBody">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Filters -->
    <style name="TextAppearance.Upa.FilterChip.Selectable" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Upa.FiltersLabel" parent="TextAppearance.Upa.H2">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Map -->
    <style name="TextAppearance.Upa.Map.MarkerLabel" parent="TextAppearance.Upa.Body2">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <style name="TextAppearance.Upa.Info.AssistantApp" parent="TextAppearance.Upa.Body2">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <!-- Account dialogs -->
    <style name="TextAppearance.Upa.AccountDialog.Username" parent="@style/TextAppearance.Upa.ListPrimary" />

    <!-- Filters -->
    <!-- Easier to extend Chip.Choice because it includes some desired color effects. -->
    <style name="Widget.Upa.FilterChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textAppearance">@style/TextAppearance.Upa.FilterChip.Selectable</item>
        <item name="chipBackgroundColor">@color/chip_bg</item>
        <item name="chipIcon">@drawable/asld_chip_icon</item>
        <item name="chipIconVisible">true</item>
        <item name="chipStrokeColor">@color/chip_stroke</item>
        <item name="textStartPadding">0dp</item>
    </style>

    <style name="Widget.Upa.FilterChip.Selectable">
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <!-- Active filters show a close shortcut and no checkmark. -->
    <style name="Widget.Upa.FilterChip.Closeable">
        <item name="android:clickable">false</item>
        <item name="chipIcon">@drawable/chip_dot</item>
        <item name="closeIcon">@drawable/ic_filter_clear</item>
        <item name="closeIconVisible">true</item>
        <item name="textEndPadding">2dp</item>
    </style>

    <style name="Widget.Upa.TimeHeaders">
        <item name="android:width">@dimen/session_keyline</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:padding">@dimen/schedule_item_padding_vertical</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="timeTextSize">@dimen/time_header_time_text_size</item>
        <item name="meridiemTextSize">@dimen/time_header_meridiem_text_size</item>
    </style>

    <style name="Widget.Upa.DaySeparatorDecoration">
        <item name="android:width">@dimen/day_header_decor_width</item>
        <item name="android:height">@dimen/day_header_decor_height</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/day_header_text_size</item>
        <item name="verticalBias">0.67</item>
    </style>

    <!-- Account dialogs -->
    <style name="Widget.Upa.BorderlessButton.NormalText" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Widget.Upa.AccountDialog.ActionButton" parent="">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:drawablePadding">@dimen/spacing_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">?listPreferredItemHeightSmall</item>
        <item name="android:paddingBottom">@dimen/spacing_small</item>
        <item name="android:paddingEnd">?listPreferredItemPaddingEnd</item>
        <item name="android:paddingStart">?listPreferredItemPaddingStart</item>
        <item name="android:paddingTop">@dimen/spacing_small</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Upa.AccountDialog.ManageAccountButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialComponents.Chip</item>
    </style>

    <!-- Onboarding -->
    <style name="Widget.Upa.OnboardingText">
        <item name="android:textAppearance">@style/TextAppearance.Upa.H1</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <!-- Speaker Detail -->
    <style name="Widget.Upa.Speaker" />

    <style name="Widget.Upa.Speaker.Title">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">@style/TextAppearance.Upa.H1</item>
    </style>

    <style name="Widget.Upa.Speaker.SocialButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:minWidth">0dp</item>
    </style>

    <!-- Home -->
    <style name="Widget.Upa.Feed" />

    <style name="Widget.Upa.Feed.Session" />

    <style name="Widget.Upa.Feed.Session.Title">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Widget.Upa.Feed.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">?android:attr/colorControlHighlight</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardCornerRadius">@dimen/feed_card_corner_radius</item>
    </style>

    <style name="Widget.Upa.Feed.SocialChannelButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">@dimen/a11y_min_touch_target</item>
        <item name="android:layout_height">@dimen/a11y_min_touch_target</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.Upa.Feed.EmptySessionsMessage">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:maxWidth">@dimen/feed_my_day_empty_sessions_message_max_width</item>
    </style>

    <!-- Map -->
    <style name="Widget.Upa.Map" />

    <style name="Widget.Upa.Map.MarkerTitle">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">@style/TextAppearance.Upa.H3</item>
        <!-- Use dp because we need the title and subtitle to always fit in the sheet peak area. -->
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
    </style>

    <style name="Widget.Upa.Map.MarkerSubtitle" parent="Widget.Upa.Map.MarkerTitle">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <!-- Use dp because we need the title and subtitle to always fit in the sheet peak area. -->
        <item name="android:textSize" tools:ignore="SpUsage">16dp</item>
    </style>

    <!-- Non-top-level screens should inflate with this theme to replace the keyline. -->
    <style name="AppTheme.Detail">
        <item name="sessionListKeyline">@dimen/spacing_small</item>
    </style>


</resources>