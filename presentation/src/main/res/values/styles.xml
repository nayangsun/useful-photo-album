<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AlertDialog.TitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/rubik_medium</item>
    </style>

    <style name="AlertDialog.TitlePanel" parent="MaterialAlertDialog.MaterialComponents.Title.Panel">
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">?attr/dialogPreferredPadding</item>
    </style>

    <style name="AlertDialog.BodyText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="AlertDialog.ButtonBar" parent="@style/Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:paddingBottom">@dimen/spacing_small</item>
        <item name="android:paddingTop">@dimen/spacing_small</item>
    </style>


    <!-- Text appearances -->
    <style name="TextAppearance.Upa.H1" parent="@style/TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">@font/rubik_light</item>
        <item name="android:textSize">@dimen/font_giant</item>
        <item name="fontFamily">@font/rubik_light</item>
    </style>
    <style name="TextAppearance.Upa.H2" parent="@style/TextAppearance.MaterialComponents.Headline2">
        <item name="android:fontFamily">@font/rubik_light</item>
        <item name="android:textSize">@dimen/font_mega_huge</item>
        <item name="fontFamily">@font/rubik_light</item>
    </style>
    <style name="TextAppearance.Upa.H3" parent="@style/TextAppearance.MaterialComponents.Headline3">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">@dimen/font_extra_huge</item>
        <item name="fontFamily">@font/rubik_regular</item>
    </style>
    <style name="TextAppearance.Upa.H4" parent="@style/TextAppearance.MaterialComponents.Headline4">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">@dimen/font_huge</item>
        <item name="fontFamily">@font/rubik_regular</item>
    </style>
    <style name="TextAppearance.Upa.H5" parent="@style/TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">@dimen/font_larger</item>
        <item name="fontFamily">@font/rubik_regular</item>
    </style>
    <style name="TextAppearance.Upa.H5.Medium" parent="@style/TextAppearance.Upa.H5">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="fontFamily">@font/rubik_medium</item>
    </style>
    <style name="TextAppearance.Upa.H6" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/font_extra_large</item>
        <item name="fontFamily">@font/rubik_medium</item>
    </style>
    <style name="TextAppearance.Upa.Sub1" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="fontFamily">@font/rubik_medium</item>
    </style>
    <style name="TextAppearance.Upa.Sub2" parent="@style/TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/font_extra_medium</item>
        <item name="fontFamily">@font/rubik_medium</item>
    </style>
    <style name="TextAppearance.Upa.Button" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/font_extra_medium</item>
        <item name="fontFamily">@font/rubik_medium</item>
    </style>
    <style name="TextAppearance.Upa.Body1" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="fontFamily">@font/rubik_regular</item>
    </style>
    <style name="TextAppearance.Upa.Body2" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">@dimen/font_extra_medium</item>
        <item name="fontFamily">@font/rubik_regular</item>
    </style>
    <style name="TextAppearance.Upa.Caption" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="fontFamily">@font/rubik_regular</item>
    </style>
    <style name="TextAppearance.Upa.Caption.Medium" parent="@style/TextAppearance.Upa.Caption">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="fontFamily">@font/rubik_medium</item>
    </style>
    <style name="TextAppearance.Upa.Overline" parent="@style/TextAppearance.MaterialComponents.Overline">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">@dimen/font_extra_medium</item>
        <item name="fontFamily">@font/rubik_regular</item>
    </style>

    <!-- List item primary text, e.g. event titles .. -->
    <style name="TextAppearance.Upa.ListPrimary" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/rubik_medium</item>
    </style>

    <style name="TextAppearance.Upa.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
    </style>

    <style name="TextAppearance.Upa.Tab" parent="@style/TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Widget styles -->
    <style name="Widget.Upa" parent="@android:style/Widget.Material" />

    <style name="Widget.Upa.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="Widget.Upa.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:paddingEnd">8dp</item>
        <item name="contentInsetStartWithNavigation">?sessionListKeyline</item>
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
        <item name="titleTextAppearance">@style/TextAppearance.Upa.ToolbarTitle</item>
    </style>

    <style name="Widget.Upa.Tabs" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.Upa.Tab</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
    </style>

    <style name="Widget.Upa.NavigationView" parent="@style/Widget.MaterialComponents.NavigationView">
        <item name="itemBackground">@drawable/navigation_item_background</item>
        <item name="itemHorizontalPadding">@dimen/nav_item_horizontal_padding</item>
    </style>

    <!-- Navigation -->
    <style name="Widget.Upa.NavigationBarContentFrameLayout" parent="android:Widget.Material">
        <item name="navigationBarBorderColor">?attr/upaNavigationBarDividerColor</item>
        <item name="navigationBarBorderSize">1dp</item>
    </style>

    <style name="Widget.Upa.HashtagIoDecoration">
        <item name="android:drawable">@drawable/hashtag_io19</item>
        <item name="margin">@dimen/nav_item_horizontal_padding</item>
    </style>

    <!-- textAppearance alone doesn't support line spacing attrs. Multiline body text will use
      style="Widget.IOSched.MultilineBody" instead of the equivalent textAppearance.
 -->
    <style name="Widget.Upa.MultilineBody">
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <!-- Info -->
    <style name="Widget.Upa.EventCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">?colorControlLight</item>
        <item name="strokeWidth">1dp</item>
        <item name="eventTypeLogoBackground">?eventCardHeaderBackground</item>
    </style>

    <!-- Info -->
    <style name="TextAppearance.Upa.CollapsibleCard" parent="@style/TextAppearance.Upa.ListPrimary">
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <!-- Home -->
    <style name="TextAppearance.Upa.CountdownLabel" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.Upa.DayIndicatorDecoration">
        <item name="android:color">?colorPrimary</item>
        <item name="insetVertical">8dp</item>
    </style>

    <!-- Schedule -->
    <style name="Widget.Upa.Tag">
        <item name="android:gravity">center_vertical</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Widget.Upa.Tag.Inline">
        <item name="android:drawablePadding">@dimen/spacing_micro</item>
        <item name="android:drawableStart">@drawable/tag_dot</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>
    <!-- Settings -->
    <style name="Widget.Upa.Settings" />

    <style name="Widget.Upa.Settings.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:background">@null</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:paddingBottom">@dimen/spacing_tiny</item>
        <item name="android:paddingEnd">?listPreferredItemPaddingEnd</item>
        <item name="android:paddingStart">?listPreferredItemPaddingStart</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="switchPadding">@dimen/spacing_tiny</item>
        <item name="switchTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="Widget.Upa.Settings.Button">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:minHeight">?listPreferredItemHeightSmall</item>
        <item name="android:paddingBottom">@dimen/spacing_tiny</item>
        <item name="android:paddingEnd">?listPreferredItemPaddingEnd</item>
        <item name="android:paddingStart">?listPreferredItemPaddingStart</item>
        <item name="android:paddingTop">@dimen/spacing_tiny</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">?textAppearanceBody2</item>
    </style>


    <!-- Settings -->
    <style name="TextAppearance.Upa.AboutButtons" parent="@style/TextAppearance.Upa.ListPrimary">
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="Widget.Upa.Settings.Button.About">
        <item name="android:textAppearance">@style/TextAppearance.Upa.AboutButtons</item>
    </style>

    <!-- Misc -->
    <style name="Widget.Upa.EmptyResults">
        <item name="android:drawablePadding">@dimen/spacing_small</item>
        <item name="android:drawableTop">@drawable/no_items_found_204</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Schedule -->
    <style name="TextAppearance.Upa.ReservationStatus" parent="@style/TextAppearance.Upa.Body2">
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Agenda -->
    <style name="Widget.Upa.DateHeaders">
        <item name="android:width">@dimen/day_header_decor_width</item>
        <item name="android:height">@dimen/day_header_decor_height</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/day_header_text_size</item>
        <item name="verticalBias">0.67</item>
    </style>


</resources>